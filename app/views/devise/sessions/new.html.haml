%h2= t('.sign_in', :default => "Sign in")

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %div
    = f.email_field :email, {"data-theme" => "d"}, :placeholder=>"email"
  %div
    = f.password_field :password, {"data-theme" => "c"}, :placeholder=>t(:password)
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me, {"data-theme" => "b"}
      = f.label :remember_me
  %div= f.submit t('.sign_in', :default => "Sign in"), {"data-theme" => "c"}
= render "devise/shared/links"
