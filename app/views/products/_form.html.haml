= form_for @product, "data-ajax" => false do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this rab from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  %div{ :class=>"title"}
    .field
      = f.label t(:title)
      = f.text_field :title

  %div{ :class=>"price"}
    .field
      = f.label t(:price)
      = f.text_field :price

  %div{ :class=>"body"}
    .field
      = f.label t(:body)
      = f.text_area :body

  %div{ :class=>"some"}
    .field
      = f.label t(:some)
    = f.check_box :some

  %div{ :class=>"scrool"}
    .field
      = f.label t(:scrool)
      = f.number_field :scrool

      - 'TABB'
  %div
    .field
      = f.submit t('.save', :default => t("helpers.links.save")), :class => "btn btn-primary", "data-ajax" => false

