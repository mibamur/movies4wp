%h1
  = t(:products)
  = link_to new_product_path, "data-ajax" => "false" do
    .ui-shadow.ui-btn.ui-corner-all.ui-btn-inline.ui-icon-plus.ui-btn-icon-notext.ui-btn-b{"data-theme" => "b", "data-ajax"=>"false", :style=>"float:right;"}
      = t(:new)

.docs-main
  %table#tabl_product.tablesaw{"data-minimap" => "", "data-mode" => "swipe", "data-mode-switch" => "", "data-sortable" => "", "data-sortable-switch" => ""}
    %thead
      %tr


        %th{"data-priority" => "1", "data-sortable-col" => ""}= t(:title)

        %th.sum= t(:price)

        %th{"data-priority" => "3", "data-sortable-col" => ""}= t(:body)

        %th{"data-priority" => "4", "data-sortable-col" => ""}= t(:some)

        %th{"data-priority" => "5", "data-sortable-col" => ""}= t(:scrool)
        %th{"data-priority" => "", "data-sortable-col" => ""}
    %tbody
      - @products.each do |product|
        %tr

          %td
            = product.title

          %td
            = product.price

          %td
            = product.body


          %td
            = product.some ? "Да" : "Нет"
          
          %td
            = product.scrool

          %td
            = link_to 'Изменить', edit_product_path(product), :class => "ui-btn ui-btn-icon-left ui-icon-edit", "data-ajax" => false
            = link_to 'Удалить', product, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "ui-btn ui-btn-icon-left ui-icon-delete", "data-ajax" => false




